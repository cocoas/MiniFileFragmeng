<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:background="?android:attr/activatedBackgroundIndicator"
                android:gravity="center_vertical"
                android:minHeight="?android:listPreferredItemHeight"
                android:paddingLeft="@dimen/item_icon_padding"
    >

    <ImageView
        android:id="@+id/sdfiletest_row_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:cropToPadding="true"
        android:padding="@dimen/item_icon_padding"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/filetype_detail_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/sdfiletest_bottom_text"
        android:layout_toRightOf="@+id/sdfiletest_row_image"
        android:orientation="vertical"
        android:paddingBottom="@dimen/item_default_padding"
        android:paddingTop="@dimen/item_default_padding"
        >

        <TextView
            android:id="@+id/sdfiletest_top_view_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            tools:text="图片"
            />

        <TextView
            android:id="@+id/sdfiletest_dataview_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:textAllCaps="false"
            android:textSize="13sp"
            tools:text="图片路径"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/sdfiletest_bottom_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/item_default_padding"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:fontFamily="sans-serif-light"
        android:textSize="12sp"
        tools:text="2个文件"
        />

</RelativeLayout>
